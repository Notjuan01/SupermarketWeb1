@page
@model SupermarketWeb.Pages.Customers.EditModel
@{
	ViewData["Tittle"] = "Edit";
}

<h1>Edit</h1>

<h4>Customers</h4>
<hr />
<div class="row">
	<div class="col-sm-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-asp-for="Category.Id" />
			<div class="form-group">
				<label asp-for="Customer.Document_Number" class="control-label"></label>
				<input asp-for="Customer.Document_Number" class="form-control" />
				<span asp-validation-for="Customer.Document_Number" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Customer.Name" class="control-label"></label>
				<input asp-for="Customer.Name" class="form-control" />
				<span asp-validation-for="Customer.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Category.Description" class="control-label"></label>
				<input asp-for="Category.Description" class="form-control" />
				<span asp-validation-for="Category.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<input type="hidden" asp-for="Category.Id" />
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
