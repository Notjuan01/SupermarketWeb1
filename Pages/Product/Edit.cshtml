@page
@model SupermarketWeb.Pages.Product.EditModel
@{
	ViewData["Tittle"] = "Index Products";
}
<h1>Edit</h1>

<h4>Prodcts</h4>
<hr />
<div class="row">
	<div class="col-sm-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-asp-for="paymode.Id" />
			<div class="form-group">
				<label asp-for="Products.Name" class="control-label"></label>
				<input asp-for="Products.Name" class="form-control" />
				<span asp-validation-for="Products.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Products.Stock" class="control-label"></label>
				<input asp-for="Products.Stock" class="form-control" />
				<span asp-validation-for="Products.Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Products.Price" class="control-label"></label>
				<input asp-for="Products.Price" class="form-control" />
				<span asp-validation-for="Products.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Products.Category" class="control-label"></label>
				<input asp-for="Products.Category" class="form-control" />
				<span asp-validation-for="Products.Category" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<input type="hidden" asp-for="Products.Id" />
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}